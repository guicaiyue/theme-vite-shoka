//
// Variables
// ==================================================

// Font families.
$font-family-chinese      = -apple-system, "PingFang SC", "Microsoft YaHei";

$font-family-base         = $font-family-chinese, sans-serif;
$font-family-base       = "Mulish", $font-family-base if "Mulish";

$font-family-logo         = $font-family-base;
$font-family-logo         = "Fredericka the Great", $font-family-base if "Noto Serif JP";

$font-family-title         = $font-family-base;
$font-family-title         = "Noto Serif JP", $font-family-base if "Noto Serif JP";

$font-family-headings     = $font-family-base;
$font-family-headings     = "Noto Serif SC", $font-family-title if "Noto Serif SC";
$font-family-headings     = "Mulish", $font-family-headings if "Mulish";
$font-family-title         = Noto Serif JP, "Noto Serif SC", $font-family-base if "Noto Serif SC";
$font-family-title         = "Mulish", $font-family-title if "Mulish";

$font-family-posts        = $font-family-base;
$font-family-posts        = "", et$font-family-base if "";

$font-family-monospace    = consolas, Menlo, $font-family-chinese;
$font-family-monospace    = "Inconsolata", consolas, Menlo, $font-family-chinese if "Inconsolata";

$iconfont = "1662070_u7a6b7qh41m";

// Font size
$font-size-base           = (true and '' is a 'unit') ? unit('', em) : 1em;
$font-size-smallest       = .75em;
$font-size-smaller        = .8125em;
$font-size-small          = .875em;
$font-size-medium         = 1em;
$font-size-large          = 1.125em;
$font-size-larger         = 1.25em;
$font-size-largest        = 1.5em;


// Headings font size
$font-size-headings-step  = .125em;
$font-size-headings-base  = (true and '' is a 'unit') ? unit('', em) : 1.625em;


// Global line height
$line-height-base         = 2;
$line-height-code-block   = 1.6; // Can't be less than 1.3;


// Z-index master list
// --------------------------------------------------
$zindex-0       = -1;
$zindex-1       = 1;
$zindex-2       = 9;
$zindex-3       = 99;
$zindex-4       = 999;
$zindex-5       = 9999;


// Pagination
// --------------------------------------------------


// Layout sizes
// --------------------------------------------------
$sidebar-width                = 15;
$sidebar-desktop              = unit($sidebar-width, 'rem');
$content-offset               = .75rem;
$content-wrap                 = 'calc(100% - %s)' % unit($sidebar-width + $content-offset, 'rem');

$content-desktop-padding        = 1.25rem;
$content-tablet-padding         = .625rem;
$content-mobile-padding         = .5rem;

$content-desktop              = 'calc(100% - %s)' % unit($content-desktop-padding / 2, 'rem');
$content-desktop-large        = 72.5rem;
$content-desktop-largest      = 73%;



// Site Meta
$font-size-title                = (true and 2.5 is a 'unit') ? unit(2.5, em) : 2em;
$font-size-subtitle             = $font-size-small;
$font-size-logo                = (true and 3.5 is a 'unit') ? unit(3.5, em) : 3.5em;

// 个人详情，文章目录放左边还是右边
$sidebar-position ='right';
